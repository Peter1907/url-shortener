<header
  class="fixed h-16 w-full top-0 bg-[#0f0c29] text-amber-50 flex justify-center items-center"
>
  <ul class="flex justify-between w-full max-w-sm">
    <li>
      <a class="hover:text-[#fcd0a1] hover:font-semibold transition-all duration-300" href="#">Home</a>
    </li>
    <li>
      <a class="hover:text-[#fcd0a1] hover:font-semibold transition-all duration-300" href="#">QR Code</a>
    </li>
    <li>
      <a class="hover:text-[#fcd0a1] hover:font-semibold transition-all duration-300" href="#">About</a>
    </li>
  </ul>
</header>
<section
  class="mt-16 py-8 bg-gradient-to-b from-[#0f0c29] via-[#302b63] to-[#24243e] text-amber-50 flex flex-col items-center"
>
  <h1 class="mb-6 font-semibold text-2xl">Free URL Shortner</h1>
  <p class="mx-4">
    This is a free tool to shorten URLs. Create short & memorable links in seconds.
  </p>
  <%= form_with model: @url,
    url: urls_path,
    method: :post,
    class: "mt-6 self-stretch w-full max-w-[90%] md:max-w-2xl transition-all duration-300 mx-auto" do |f|
  %>
    <div class="flex flex-col self-center gap-4">
      <%= f.text_field :target, placeholder: "Original URL", class: "rounded-md py-3" %>
      <%= f.text_field :alias, placeholder: "Custom URL", class: "rounded-md py-3" %>
      <ul class="ml-4 flex flex-col text-[#a9fff7]">
        <li>* Characters from a-z or A-Z</li>
        <li>* Numbers 0-9 are allowed</li>
        <li>* Special charachters are NOT allowed</li>
        <li>* hyphens "-" or underscores "_" are allowed</li>
      </ul>
      <%= f.submit "Shorten URL",
        class: "px-6 py-3 rounded-md bg-[#a9fff7] text-[#0f0c29] font-semibold self-center
          hover:bg-[#fcd0a1] cursor-pointer transition-all duration-300"
      %>
    </div>
  <% end %>
</section>
<section></section>
